{
    "info": {
        "name": "Tuition Payment System API",
        "description": "AI Chat Application for Tuition Payment System",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "https://gateway-group2-basar.azure-api.net",
            "type": "string"
        },
        {
            "key": "localUrl",
            "value": "http://localhost:8080",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "AI Chat",
            "item": [
                {
                    "name": "Query Tuition (AI Chat)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"message\": \"Check my tuition balance for student 2023001\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/ai/chat",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "ai",
                                "chat"
                            ]
                        }
                    }
                },
                {
                    "name": "Pay Tuition (AI Chat)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"message\": \"I want to pay 1000 for term 2025-SUMMER, student number 2023001\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/ai/chat",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "ai",
                                "chat"
                            ]
                        }
                    }
                },
                {
                    "name": "Unpaid Tuitions (AI Chat)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"message\": \"Show me unpaid tuitions for 2025-SUMMER\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/ai/chat",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "ai",
                                "chat"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Direct API",
            "item": [
                {
                    "name": "Query Tuition Status",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/tuition/2023001",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "tuition",
                                "2023001"
                            ]
                        }
                    }
                },
                {
                    "name": "Pay Tuition",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"studentNo\": \"2023001\",\n    \"term\": \"2025-SUMMER\",\n    \"amount\": 500.00\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/payment",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "payment"
                            ]
                        }
                    }
                },
                {
                    "name": "Login (Get JWT)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"admin123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "auth",
                                "login"
                            ]
                        }
                    }
                },
                {
                    "name": "Add Single Tuition (Admin)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"studentNo\": \"2023001\",\n    \"term\": \"2025-SUMMER\",\n    \"amount\": 5000.00\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/admin/add-tuition",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "admin",
                                "add-tuition"
                            ]
                        }
                    }
                },
                {
                    "name": "Unpaid Status (Admin)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/admin/unpaid-status?term=2025-SUMMER&page=0&size=10",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "admin",
                                "unpaid-status"
                            ],
                            "query": [
                                {
                                    "key": "term",
                                    "value": "2025-SUMMER"
                                },
                                {
                                    "key": "page",
                                    "value": "0"
                                },
                                {
                                    "key": "size",
                                    "value": "10"
                                }
                            ]
                        }
                    }
                }
            ]
        }
    ]
}