{
	"info": {
		"name": "Tuition Payment System API",
		"description": "API collection for Tuition Payment System",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "jwtToken",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set('jwtToken', jsonData.token);",
									"    console.log('JWT Token saved:', jsonData.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "auth", "login"]
						}
					}
				}
			]
		},
		{
			"name": "Mobile App",
			"item": [
				{
					"name": "Query Tuition Status",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/tuition/2023001",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "tuition", "2023001"]
						},
						"description": "Mobile App - No Auth Required, Rate Limited (3 per student per day)"
					}
				}
			]
		},
		{
			"name": "Banking App",
			"item": [
				{
					"name": "Query Tuition Status",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwtToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/banking/tuition/2023001",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "banking", "tuition", "2023001"]
						},
						"description": "Banking App - Auth Required"
					}
				},
				{
					"name": "Pay Tuition",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"studentNo\": \"2023001\",\n  \"term\": \"2024-FALL\",\n  \"amount\": 5000.0\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/payment",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "payment"]
						},
						"description": "Banking App - No Auth Required"
					}
				}
			]
		},
		{
			"name": "Admin",
			"item": [
				{
					"name": "Add Tuition",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwtToken}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"studentNo\": \"2023001\",\n  \"term\": \"2025-SPRING\",\n  \"amount\": 12000.0\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/admin/add-tuition",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "admin", "add-tuition"]
						},
						"description": "Admin - Auth Required"
					}
				},
				{
					"name": "Batch Upload CSV",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwtToken}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "file",
									"type": "file",
									"src": []
								}
							]
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/admin/batch-upload",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "admin", "batch-upload"]
						},
						"description": "Admin - Auth Required, Upload CSV file (format: studentNo,term,amount)"
					}
				},
				{
					"name": "Unpaid Tuition Status",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwtToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/admin/unpaid-status?term=2024-FALL&page=0&size=10",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "admin", "unpaid-status"],
							"query": [
								{
									"key": "term",
									"value": "2024-FALL"
								},
								{
									"key": "page",
									"value": "0"
								},
								{
									"key": "size",
									"value": "10"
								}
							]
						},
						"description": "Admin - Auth Required, Paging Supported"
					}
				}
			]
		},
		{
			"name": "Rate Limiting Test",
			"item": [
				{
					"name": "Request 1 - Student 2023003",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/tuition/2023003",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "tuition", "2023003"]
						},
						"description": "First request - Should succeed (200 OK)"
					}
				},
				{
					"name": "Request 2 - Student 2023003",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/tuition/2023003",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "tuition", "2023003"]
						},
						"description": "Second request - Should succeed (200 OK)"
					}
				},
				{
					"name": "Request 3 - Student 2023003",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/tuition/2023003",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "tuition", "2023003"]
						},
						"description": "Third request - Should succeed (200 OK)"
					}
				},
				{
					"name": "Request 4 - Student 2023003 (Rate Limited)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/tuition/2023003",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "tuition", "2023003"]
						},
						"description": "Fourth request - Should return 429 Too Many Requests (Rate limit: 3 per student per day)"
					}
				},
				{
					"name": "Request - Different Student (Should Work)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/tuition/2023004",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "tuition", "2023004"]
						},
						"description": "Different student number - Should succeed because rate limit is per student"
					}
				}
			]
		}
	]
}

